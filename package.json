{
  "name": "baseNConverter",
  "version": "1.0.0",
  "description": "A baseN converter",
  "scripts": {
    "start": "ts-node ./examples/index.ts",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/index.ts' -e ts",
